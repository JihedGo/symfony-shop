{% extends 'base.html.twig' %}

{% block title %}Hello CrudProductController!
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header bg-primary text-white text-center">Gestion des projets</div>
					<div class="card-body">
						<form action="{{ path('add_product') }}" method="POST">
							<div class="form-group">
								<label for="">Produit</label>
								<input type="text" class="form-control" name="product">
							</div>
							<div class="form-group">
								<label for="">Prix</label>
								<input type="text" class="form-control" name="price">
							</div>
							<div class="form-group">
								<label for="">Qte</label>
								<input type="text" class="form-control" name="qte">
							</div>
							<div class="form-group">
								<button class="btn btn-block btn-primary">Ajouter</button>
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
