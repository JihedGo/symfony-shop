{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	t
	<h1 class="bg bg-primary text-white p-2 m-2 text-center">Category List</h1>
	<table class="table table-hover">
		<thead>
			<th>Name</th>
			<th>Description</th>

		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}
					</td>
					<td>{{ category.description }}
					</td>
				</tr>

			{% endfor %}

		</tbody>
	</table>

{% endblock %}
