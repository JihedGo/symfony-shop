{% extends 'base.html.twig' %}

{% block title %}Hello CrudProductController!
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header bg-primary text-white text-center">Information Produit</div>
					<div class="card-body">
						<ul class="list-group">
							<li class="list-group-item">Produit :
								{{ product.product }}
							</li>
							<li class="list-group-item">Prix:
								{{ product.price }}

							</li>
							<li class="list-group-item">Qte:
								{{ product.qte }}

							</li>
						</ul>
						<a href="{{ path('list_product') }}">
							retour au liste</a>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
