{% extends 'base.html.twig' %}

{% block title %}Update Product
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-header bg-primary text-white text-center">Update Product</div>
					<div class="card-body">
						<form action="{{ path('update_product', {'id': product.id}) }}" method="post">

							<div class="form-group">
								<label for="">Produit</label>
								<input type="text" class="form-control" name="product" value="{{ product.product }}">
							</div>
							<div class="form-group">
								<label for="">Prix</label>
								<input type="text" class="form-control" name="price" value="{{ product.price }}">
							</div>
							<div class="form-group">
								<label for="">Qte</label>
								<input type="text" class="form-control" name="qte" value="{{ product.qte }}">
							</div>
							<div class="form-group">
								<button class="btn btn-block btn-danger">Modifier</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
